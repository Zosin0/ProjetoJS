<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">E-commerce</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/cart">Carrinho</a></li>
        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar" id="search">
      </form>
    </div>
  </nav>

  <div class="container">
    <h1>Produtos</h1>
    <div id="products" class="row">
      <% products.forEach(product => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">$<%= product.price %></p>
              <button class="btn btn-primary add-to-cart" data-id="<%= product.id %>">Adicionar ao carrinho</button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <script src="js/products.js"></script>
</body>
</html>
